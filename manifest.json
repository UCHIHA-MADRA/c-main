{
    "manifest_version": 3,
    "name": "Hindi-English Translator",
    "version": "1.0",
    "description": "Translate text between Hindi and English.",
  
    "host_permissions": [
        "*://*.example.org/"
    ],
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "22.png"
        }
    },
    "icons": {
        "128": "22.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}